<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".activity.SettingActivity"
    tools:showIn="@layout/activity_setting">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/oauth_linearlayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.lz233.onetext.view.NiceImageView
                    android:id="@+id/oauth_avatar_imageview"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/layout_margin"
                    android:layout_marginBottom="@dimen/content_margin"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/ic_account"
                    app:is_circle="true" />

                <TextView
                    android:id="@+id/oauth_name_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/layout_margin"
                    android:layout_marginEnd="@dimen/layout_margin"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="@string/oauth_login_text"
                    android:textColor="@color/colorText2"
                    android:textSize="@dimen/title_size"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/oauth_bio_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/layout_margin"
                    android:layout_marginEnd="@dimen/layout_margin"
                    android:layout_marginBottom="@dimen/layout_margin"
                    android:gravity="center"
                    android:text="@string/oauth_login_detail"
                    android:textColor="@color/colorText2"
                    android:textSize="@dimen/small_text_size" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/layout_margin"
                android:layout_marginRight="@dimen/layout_margin"
                android:layout_marginBottom="@dimen/layout_margin"
                android:background="@drawable/bgstyle_md2"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/layout_margin"
                    android:layout_marginBottom="@dimen/layout_margin"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/layout_margin"
                        android:layout_marginRight="@dimen/layout_margin"
                        android:layout_marginBottom="@dimen/layout_margin"
                        android:text="@string/interface_text"
                        android:textColor="@color/colorText2"
                        android:textSize="@dimen/text_size" />

                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:overScrollMode="never"
                        android:scrollbars="none">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="@dimen/layout_margin"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/layout_margin"
                                android:layout_marginRight="@dimen/layout_margin"
                                android:background="@drawable/bgstyle_md2"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_margin="@dimen/layout_margin"
                                    android:orientation="vertical">

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="0dp"
                                        android:layout_weight="1"
                                        android:orientation="horizontal">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center"
                                            android:gravity="center"
                                            android:text="å˜¤"
                                            android:textColor="@color/colorText3"
                                            android:textSize="70dp" />

                                        <LinearLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginStart="@dimen/layout_margin"
                                            android:orientation="vertical">

                                            <TextView
                                                android:id="@+id/current_font_textview"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:text="@string/current_font_text"
                                                android:textColor="@color/colorText3"
                                                android:textSize="@dimen/small_text_size" />

                                            <TextView
                                                android:id="@+id/font_system_textview"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:layout_marginTop="@dimen/content_margin"
                                                android:text="@string/font_system_text"
                                                android:textColor="@color/colorText3"
                                                android:textSize="@dimen/small_text_size" />

                                            <TextView
                                                android:id="@+id/font_custom_textview"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:layout_marginTop="@dimen/content_margin"
                                                android:text="@string/font_custom_text"
                                                android:textColor="@color/colorText3"
                                                android:textSize="@dimen/small_text_size" />
                                        </LinearLayout>
                                    </LinearLayout>
                                </LinearLayout>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginRight="@dimen/layout_margin"
                                android:background="@drawable/bgstyle_md2"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_margin="@dimen/layout_margin"
                                    android:orientation="vertical">

                                    <LinearLayout
                                        android:id="@+id/font_yiqi_layout"
                                        android:layout_width="wrap_content"
                                        android:layout_height="0dp"
                                        android:layout_weight="1"
                                        android:orientation="horizontal">

                                        <ImageView
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center"
                                            app:srcCompat="@drawable/font_yiqi" />

                                        <TextView
                                            android:id="@+id/font_yiqi_textview"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginStart="@dimen/layout_margin"
                                            android:text="@string/font_yiqi"
                                            android:textColor="@color/colorText3"
                                            android:textSize="@dimen/small_text_size" />
                                    </LinearLayout>
                                </LinearLayout>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginRight="@dimen/layout_margin"
                                android:background="@drawable/bgstyle_md2"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_margin="@dimen/layout_margin"
                                    android:orientation="vertical">

                                    <LinearLayout
                                        android:id="@+id/font_canger_layout"
                                        android:layout_width="wrap_content"
                                        android:layout_height="0dp"
                                        android:layout_weight="1"
                                        android:orientation="horizontal">

                                        <ImageView
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center"
                                            app:srcCompat="@drawable/font_canger" />

                                        <TextView
                                            android:id="@+id/font_canger_textview"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginStart="@dimen/layout_margin"
                                            android:text="@string/font_canger"
                                            android:textColor="@color/colorText3"
                                            android:textSize="@dimen/small_text_size" />
                                    </LinearLayout>
                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>
                    </HorizontalScrollView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/layout_margin"
                        android:layout_marginEnd="@dimen/layout_margin"
                        android:layout_marginBottom="@dimen/content_margin"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:text="@string/interface_daynight_text"
                            android:textColor="@color/colorText3"
                            android:textSize="@dimen/small_text_size" />

                        <androidx.appcompat.widget.AppCompatSpinner
                            android:id="@+id/interface_daynight_spinner"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="0"
                            android:backgroundTint="@color/colorText3"
                            android:entries="@array/daynight"
                            android:textColor="@color/colorText3"
                            android:textSize="@dimen/small_text_size" />
                    </LinearLayout>

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/oauth_hide_switch"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/layout_margin"
                        android:layout_marginEnd="@dimen/layout_margin"
                        android:text="@string/oauth_hide_text"
                        android:textColor="@color/colorText3"
                        android:textSize="@dimen/small_text_size"
                        app:thumbTint="@color/colorText3" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/layout_margin"
                android:layout_marginRight="@dimen/layout_margin"
                android:layout_marginBottom="@dimen/layout_margin"
                android:background="@drawable/bgstyle_md2"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/layout_margin"
                    android:layout_marginBottom="@dimen/layout_margin"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/layout_margin"
                        android:layout_marginEnd="@dimen/layout_margin"
                        android:layout_marginBottom="@dimen/content_margin"
                        android:text="@string/behavior_text"
                        android:textColor="@color/colorText2"
                        android:textSize="@dimen/text_size" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/layout_margin"
                        android:layout_marginEnd="@dimen/layout_margin"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:text="@string/chinese_type"
                            android:textColor="@color/colorText3"
                            android:textSize="@dimen/small_text_size" />

                        <androidx.appcompat.widget.AppCompatSpinner
                            android:id="@+id/chinese_type_spinner"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="0"
                            android:backgroundTint="@color/colorText3"
                            android:entries="@array/chinese_type"
                            android:textColor="@color/colorText3"
                            android:textSize="@dimen/small_text_size" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/layout_margin"
                android:layout_marginRight="@dimen/layout_margin"
                android:layout_marginBottom="@dimen/layout_margin"
                android:background="@drawable/bgstyle_md2"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/layout_margin"
                    android:layout_marginBottom="@dimen/layout_margin"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/layout_margin"
                        android:layout_marginEnd="@dimen/layout_margin"
                        android:layout_marginBottom="@dimen/layout_margin"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginRight="@dimen/content_margin"
                            android:layout_weight="1"
                            android:text="@string/feed_text"
                            android:textColor="@color/colorText2"
                            android:textSize="@dimen/text_size" />

                        <ImageView
                            android:id="@+id/feed_reset_imageview"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginRight="@dimen/content_margin"
                            android:layout_weight="0"
                            android:src="@drawable/ic_settings_restore" />

                        <ImageView
                            android:id="@+id/feed_add_imageview"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="0"
                            android:src="@drawable/ic_library_add" />
                    </LinearLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/feed_recyclerview"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="@dimen/content_margin"
                        android:overScrollMode="never" />

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/feed_auto_update_switch"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/layout_margin"
                        android:layout_marginEnd="@dimen/layout_margin"
                        android:layout_marginBottom="@dimen/content_margin"
                        android:text="@string/feed_auto_update_text"
                        android:textColor="@color/colorText3"
                        android:textSize="@dimen/small_text_size"
                        app:thumbTint="@color/colorText3" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/layout_margin"
                        android:layout_marginEnd="@dimen/layout_margin"
                        android:orientation="horizontal">

                        <com.warkiz.widget.IndicatorSeekBar
                            android:id="@+id/feed_refresh_seekbar"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginEnd="@dimen/content_margin"
                            android:layout_weight="1"
                            android:thumbTint="@color/colorText3"
                            app:isb_indicator_color="@color/colorText3"
                            app:isb_indicator_text_color="@color/colorWhite"
                            app:isb_max="168"
                            app:isb_min="1"
                            app:isb_show_indicator="rectangle"
                            app:isb_thumb_color="@color/colorText3"
                            app:isb_track_progress_color="@color/colorAccent" />

                        <ImageView
                            android:id="@+id/feed_refresh_imageview"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_replay" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/layout_margin"
                android:layout_marginRight="@dimen/layout_margin"
                android:layout_marginBottom="@dimen/layout_margin"
                android:background="@drawable/bgstyle_md2"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/layout_margin"
                    android:layout_marginBottom="@dimen/layout_margin"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/layout_margin"
                        android:layout_marginEnd="@dimen/layout_margin"
                        android:layout_marginBottom="@dimen/content_margin"
                        android:text="@string/widget_text"
                        android:textColor="@color/colorText2"
                        android:textSize="@dimen/text_size" />

                    <TextView
                        android:id="@+id/widget_enable_textview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/layout_margin"
                        android:layout_marginEnd="@dimen/layout_margin"
                        android:text=" "
                        android:textColor="@color/colorText3"
                        android:textSize="@dimen/small_text_size" />

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/widget_dark_switch"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/layout_margin"
                        android:layout_marginEnd="@dimen/layout_margin"
                        android:text="@string/widget_dark"
                        android:textColor="@color/colorText3"
                        android:textSize="@dimen/small_text_size"
                        app:thumbTint="@color/colorText3" />

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/widget_shadow_switch"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/layout_margin"
                        android:layout_marginTop="-10dp"
                        android:layout_marginEnd="@dimen/layout_margin"
                        android:text="@string/widget_shadow"
                        android:textColor="@color/colorText3"
                        android:textSize="@dimen/small_text_size"
                        app:thumbTint="@color/colorText3" />

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/widget_center_switch"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/layout_margin"
                        android:layout_marginTop="-10dp"
                        android:layout_marginEnd="@dimen/layout_margin"
                        android:text="@string/widget_center"
                        android:textColor="@color/colorText3"
                        android:textSize="@dimen/small_text_size"
                        app:thumbTint="@color/colorText3" />

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/widget_notification_switch"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/layout_margin"
                        android:layout_marginTop="-10dp"
                        android:layout_marginEnd="@dimen/layout_margin"
                        android:layout_marginBottom="@dimen/content_margin"
                        android:text="@string/widget_notification_text"
                        android:textColor="@color/colorText3"
                        android:textSize="@dimen/small_text_size"
                        app:thumbTint="@color/colorText3" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/layout_margin"
                        android:layout_marginEnd="@dimen/layout_margin"
                        android:orientation="horizontal">

                        <com.warkiz.widget.IndicatorSeekBar
                            android:id="@+id/widget_refresh_seekbar"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginEnd="@dimen/content_margin"
                            android:layout_weight="1"
                            android:thumbTint="@color/colorText3"
                            app:isb_indicator_color="@color/colorText3"
                            app:isb_indicator_text_color="@color/colorWhite"
                            app:isb_max="2880"
                            app:isb_min="30"
                            app:isb_show_indicator="rectangle"
                            app:isb_thumb_color="@color/colorText3"
                            app:isb_track_progress_color="@color/colorAccent" />

                        <ImageView
                            android:id="@+id/widget_refresh_imageview"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_replay" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/last_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/layout_margin"
                android:layout_marginRight="@dimen/layout_margin"
                android:layout_marginBottom="@dimen/layout_margin"
                android:background="@drawable/bgstyle_md2"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/layout_margin"
                    android:layout_marginBottom="@dimen/layout_margin"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/layout_margin"
                        android:layout_marginEnd="@dimen/layout_margin"
                        android:text="@string/about_text"
                        android:textColor="@color/colorText2"
                        android:textSize="@dimen/text_size" />

                    <TextView
                        android:id="@+id/about_page_textview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/layout_margin"
                        android:layout_marginTop="@dimen/content_margin"
                        android:layout_marginEnd="@dimen/layout_margin"
                        android:text="@string/about_page_text"
                        android:textColor="@color/colorText3"
                        android:textSize="@dimen/small_text_size" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>